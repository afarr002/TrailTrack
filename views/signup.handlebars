<!-- {{!-- Signup --}} -->
<div class="container">
    <div id="signup" class="col s12 tabcontent"></div>
    <h2>Please Complete the Sign Up Form</h2>
    <form class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input username="username" id="user_name-signup" type="text" class="validate">
                <label for="user_name-signup">User Name</label>
            </div>

            <div class="row"></div>
            <div class="input-field col s12">
                <input id="email-signup" type="email" class="validate">
                <label for="email-signup">Email</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input id="password-signup" type="password" class="validate">
                <label for="password-signup">Password</label>
            </div>
        </div>

        <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>