<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Import Bulma CSS file-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <!-- Import local stylesheet -->
    <link rel="stylesheet" href="/css/style.css" />
    <title>HappyCamper</title>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a href="/home" class="navbar-item is-size-1">HappyCamper</a>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            {{#if loggedIn}}
            <button id="logout" class="button">Logout</button>
            {{else}}
            <a href="/login" class="button nav-btn">Log In</a>
            {{/if}}
            <a href="/signup" class="button nav-btn">Sign Up</a>
          </div>
        </div>
      </div>
    </nav>
    <section class="section">
      <div class="container">
          {{{body}}}
        </div>
      </div>
    </section>
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>